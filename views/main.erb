<section class='container'>
  <div class='box'>
    <section class="columns">

      <div class='welcome'>
        <% if current_player %>
          Welcome <%= current_player.username %>
        <% end %>
      </div>

      <div class='left-col'>
        <ul>
        <% @app.available_players.each do |player| %>
          <li><%= player %> </li>
        <% end %>
        </ul>
      </div>

      <div class='center-col'>

        <section class='main-errors'>
          <% if flash[:notice] %>
            <p><%= flash[:notice] %></p>
          <% end %>
        </section>

        <div class='available-button'>
          <form action='/playing' method='post'>
            <input type='submit' name='yes' value='AVAILABLE'>
          </form>
        </div>

        <div class='generate-button'>
          <form action='/generate' method='post'>
              <input type='submit' name='generate' value='GENERATE'>
          </form>
        </div>

        <div class='reset-button'>
          <form action='/reset' method='post'>
            <input type='submit' name='RESET' value='RESET'>
          </form>
        </div>

      </div>

      <div class='right-col'>

        <div class='team1'>
          <ul>
            <% @team1.each do |player| %>
              <li><%= player %></li>
            <% end %>
          </ul>
        </div>

        <div class='team2'>
          <ul>
            <% @team2.each do |player| %>
              <li><%= player %></li>
            <% end %>
          </ul>
        </div>

      </div>
    </section>
  </div>
</section>

