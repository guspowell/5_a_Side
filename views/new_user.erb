<section class="box">

  <% if flash[:notice] %>
    <p><%= flash[:notice] %></p>
  <% end %>

  <section class="register">
    <section class="register-elements">
      <section class="join-message">Enter a username to join</section>
        <form action="/registering" method="post">
          <input type='text' name='username_register'>
          <input type='submit' name='submit-register' value='Register'>
        </form>
      </section>
    </section>
  </section>

</section>
